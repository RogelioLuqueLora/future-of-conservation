  <p class="card-text">
    <%= radio_button_tag "demographics[educational_specialism]", 'Yes, both as a researcher and as a practitioner' %>
    <%= label_tag 'Yes, both as a researcher and as a practitioner' %>
  </p>
  <p class="card-text">
    <%= radio_button_tag "demographics[educational_specialism]", 'No' %>
    <%= label_tag 'No' %>
  </p>
